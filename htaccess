RewriteEngine On

# Cambia esto si tu app vive en subcarpeta; respeta mayúsculas/minúsculas
RewriteBase /Orion3D/

# Servir archivos/carpetas reales tal cual (Assets, imágenes, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Bloquear ficheros sensibles
RewriteRule ^(composer\.json|composer\.lock|\.env) - [F,L]

# Enrutar todo lo demás al front controller
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
